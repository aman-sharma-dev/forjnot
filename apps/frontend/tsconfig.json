{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"types": ["@types/react"],
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@stackbase/shared-env": ["../../packages/shared-env/src"],
			"@stackbase/shared-config": ["../../packages/shared-configs/src"],
			"@stackbase/shared-dto": ["../../packages/shared-dtos/src"],
			"@stackbase/shared-utils": ["../../packages/shared-utils/src"],
			"@stackbase/shared-constants": ["../../packages/shared-constants/src"],
			"@stackbase/shared-types": ["../../packages/shared-types/src"],
			"@stackbase/shared-logger": ["../../packages/shared-logger/src"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../../packages/shared-env/**/*",
		"../../packages/shared-config/**/*",
		"../../packages/shared-dto/**/*",
		"../../packages/shared-types/**/*",
		"../../packages/shared-constants/**/*",
		"../../packages/shared-utils/**/*",
		"../../packages/shared-logger/**/*"
	],
	"exclude": ["node_modules"]
}
