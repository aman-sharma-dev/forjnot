# ─── Runtime Mode ──────────────────────────────────────────────
RUNTIME_MODE=local                      # local | development | production

# ─── Server ────────────────────────────────────────────────────
PORT_BACKEND=8000
PORT_FRONTEND=4200
ROUTE_PREFIX=api
SERVER_SECRET=your-secret-key
ENCRYPTION_KEY=super-secret-key

# ─── URLs (Optional overrides) ────────────────────────────────
BACKEND_URL_LOCAL=http://localhost:8000
BACKEND_URL_DEVELOPMENT=https://dev-api.stackbase.dev
BACKEND_URL_PRODUCTION=https://api.stackbase.dev

FRONTEND_URL_LOCAL=http://localhost:4200
FRONTEND_URL_DEVELOPMENT=https://dev.stackbase.dev
FRONTEND_URL_PRODUCTION=https://stackbase.dev

# ─── Database ─────────────────────────────────────────────────
# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=stackbase-local

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=stackbase

# ─── Logger / Monitoring ───────────────────────────────────────
LOG_LEVEL=debug                      # debug | info | warn | error
HTTP_LOG_LEVEL=all                   # all | errors | none
CLOUDWATCH_LOG_GROUP=stackbase-logs
CLOUDWATCH_STREAM=backend-api
AWS_REGION=us-east-1
